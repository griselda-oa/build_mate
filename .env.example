# Build Mate Ghana Ltd - Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME="Build Mate Ghana"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost/buildmate

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=buildmate_db
DB_USER=root
DB_PASS=

# Payment Gateways (Sandbox Keys)
PAYMENT_MODE=mock
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST_xxxxxxxxxxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST_xxxxxxxxxxxxx

# Currency
DEFAULT_CURRENCY=GHS
USD_TO_GHS_RATE=12.5

# Security
SESSION_LIFETIME=1800
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
ADMIN_EMAIL=admin@buildmate.com

# File Uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,pdf
