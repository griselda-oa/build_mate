# Set index file
DirectoryIndex index.php

# Route ALL requests to index.php
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set RewriteBase - this will work for both root and subdirectory deployments
    # For root deployment (domain.com), this stays as /
    # For subdirectory (domain.com/subfolder), change to /subfolder/
    RewriteBase /
    
    # Allow assets (CSS, JS, images) to be served directly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} assets/
    RewriteRule ^(.*)$ - [L]
    
    # Allow storage/uploads to be served directly (for uploaded images/files)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} storage/uploads/
    RewriteRule ^(.*)$ - [L]
    
    # Allow storage/invoices to be served directly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} storage/invoices/
    RewriteRule ^(.*)$ - [L]
    
    # If file exists, serve it
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.*)$ - [L]
    
    # If directory exists, serve it
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*)$ - [L]
    
    # Everything else goes to index.php
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>

# Prevent directory listing
Options -Indexes

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
